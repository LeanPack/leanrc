{
  "name": "foxxmc-{{name}}",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "description": "FoxxMC application for <description>",
  "author": "<author name>",
  "thumbnail": "public/fox_logo.png",

  "engines": {
    "arangodb": "^3.0.0"
  },

  "main": "index.js",
  "defaultDocument": "index.html",

  "contributors": [],

  "keywords": [
    "ArangoDB",
    "Foxx",
    "API",
    "FoxxMC"
  ],

  "scripts": {
    "setup": "scripts/setup.js",
    "teardown": "scripts/teardown.js",
    "migrate": "scripts/migrate.js",
    "rollback": "scripts/rollback.js",
    "delayed_job": "scripts/delayedJob.js",
    "touch_queue": "scripts/touchQueue.js",
    "send_signal": "scripts/sendSignal.js"
  },

  "dependencies": {
    "basis": {
      "name": "foxxmc-basis",
      "version": "1.0.0-rc.15",
      "description": "Basis module will be used for check sessions and etc.",
      "required": true
    }
  },

  "configuration": {
    "secret": {
      "description": "Secret key for encoding and decoding tokens.",
      "type": "string",
      "default": "secret"
    },
    "apiKey": {
      "description": "Secret key allowing interactions between servers",
      "type": "string",
      "default": "4k=3a!%95!Kr2rN+gt8J^Zx7#qHtcqUUyCtx=d_%%XAzfGpeh822Wh34T7ngZ"
    },
    "streamServer": {
      "description": "URL for stream server (used for objects changes notifications)",
      "type": "string",
      "default": "http://127.0.0.1:9001/"
    },
    "mailApikey": {
      "description": "API_KEY for mailer.",
      "type": "string",
      "default": "19e343784112156561333a1b716a05dab85cf1a2"
    },
    "mailBcc": {
      "description": "BCC param for mailer. (Only one email now)",
      "type": "string",
      "default": "denya@saifas.com"
    },
    "mailTitle": {
      "description": "Name in `from` params for mailer.",
      "type": "string",
      "default": "FoxxMC"
    },
    "mailFrom": {
      "description": "Email in `from` params for mailer.",
      "type": "string",
      "default": "no-reply@foxxmc.com"
    }
  },

  "files": {
    "/": "public"
  },

  "lib": "dist"
}
